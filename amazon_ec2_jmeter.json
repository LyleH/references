{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Action": [
				"ec2:CreateTags",
				"ec2:DescribeInstances",
				"ec2:DescribeSpotPriceHistory",
				"ec2:DescribeSpotInstanceRequests",
				"ec2:RequestSpotInstances",
				"ec2:RunInstances",
				"ec2:StartInstances",
				"ec2:DescribeSubnets",
				"ec2:DescribeSecurityGroups"
			],
			"Effect": "Allow",
			"Resource": [
				"*"
			]
		},
		{
			"Action": [
				"ec2:StopInstances",
				"ec2:TerminateInstances"
			],
			"Effect": "Allow",
			"Resource": "*",
			"Condition": {
				"StringEquals": {
					"ec2:ResourceTag/jmeter": "True"
				}
			}
		}
	]
}